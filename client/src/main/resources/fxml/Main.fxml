<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.chart.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.expensetracker.ui.MainController" style="-fx-background-color: #f4f6f8;">
   <top>
      <VBox spacing="15.0">
         <padding>
            <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
         </padding>
         <children>
            <!-- Header & Summary Section -->
            <HBox spacing="20.0" alignment="CENTER_LEFT">
               <children>
                  <VBox>
                     <Label text="Dashboard" style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #2b5876;" />
                     <Label text="Overview &amp; Statistics" style="-fx-font-size: 14px; -fx-text-fill: #7f8c8d;" />
                  </VBox>
                  <Region HBox.hgrow="ALWAYS" />
                  
                  <Label fx:id="statusLabel" text="Offline" style="-fx-text-fill: white; -fx-background-color: #e74c3c; -fx-background-radius: 15; -fx-padding: 5 15;" />
                  <Button text="Logout" onAction="#handleLogout" style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-background-radius: 20; -fx-cursor: hand;" />

                  <!-- Summary Cards -->
                  <HBox spacing="15.0">
                     <VBox style="-fx-background-color: white; -fx-background-radius: 8; -fx-padding: 10 20; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 5, 0, 0, 2);">
                        <Label text="Total Income" style="-fx-text-fill: #7f8c8d; -fx-font-size: 12px;" />
                        <Label fx:id="totalIncomeLabel" text="\$0.00" style="-fx-text-fill: #27ae60; -fx-font-size: 18px; -fx-font-weight: bold;" />
                     </VBox>
                     <VBox style="-fx-background-color: white; -fx-background-radius: 8; -fx-padding: 10 20; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 5, 0, 0, 2);">
                        <Label text="Total Expenses" style="-fx-text-fill: #7f8c8d; -fx-font-size: 12px;" />
                        <Label fx:id="totalExpenseLabel" text="\$0.00" style="-fx-text-fill: #c0392b; -fx-font-size: 18px; -fx-font-weight: bold;" />
                     </VBox>
                     <VBox style="-fx-background-color: white; -fx-background-radius: 8; -fx-padding: 10 20; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 5, 0, 0, 2);">
                        <Label text="Net Balance" style="-fx-text-fill: #7f8c8d; -fx-font-size: 12px;" />
                        <Label fx:id="netBalanceLabel" text="\$0.00" style="-fx-text-fill: #2980b9; -fx-font-size: 18px; -fx-font-weight: bold;" />
                     </VBox>
                  </HBox>
               </children>
            </HBox>

            <!-- Transaction Entry Card -->
            <VBox style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 15; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.05), 10, 0, 0, 2);">
               <Label text="New Transaction" style="-fx-font-weight: bold; -fx-font-size: 14px; -fx-text-fill: #2c3e50; -fx-padding: 0 0 10 0;" />
               <HBox spacing="10.0" alignment="CENTER_LEFT">
                  <children>
                     <ComboBox fx:id="typeComboBox" promptText="Type" prefWidth="110.0" style="-fx-background-radius: 4; -fx-background-color: #f8f9fa; -fx-border-color: #dee2e6; -fx-border-radius: 4;" />
                     <TextField fx:id="amountField" promptText="Amount ($)" prefWidth="110.0" style="-fx-background-radius: 4; -fx-background-color: #f8f9fa; -fx-border-color: #dee2e6; -fx-border-radius: 4;" />
                     <TextArea fx:id="descriptionField" promptText="Description" prefRowCount="1" prefWidth="250.0" style="-fx-background-radius: 4; -fx-background-color: #f8f9fa; -fx-border-color: #dee2e6; -fx-border-radius: 4;" />
                     <DatePicker fx:id="datePicker" promptText="Date" prefWidth="130.0" style="-fx-background-radius: 4;" />
                     <ComboBox fx:id="categoryComboBox" promptText="Category" prefWidth="160.0" style="-fx-background-radius: 4; -fx-background-color: #f8f9fa; -fx-border-color: #dee2e6; -fx-border-radius: 4; -fx-prompt-text-fill: #7f8c8d;" />
                     <Region HBox.hgrow="ALWAYS" />
                     <Button mnemonicParsing="false" onAction="#handleAddTransaction" text="Add Transaction" style="-fx-background-color: #4e4376; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 4; -fx-cursor: hand;" />
                     <Button mnemonicParsing="false" onAction="#handleDeleteTransaction" text="Delete" style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 4; -fx-cursor: hand;" />
                  </children>
               </HBox>
            </VBox>

            <!-- Filters & Tools Section -->
            <HBox spacing="15.0">
               <!-- Filters -->
               <VBox HBox.hgrow="ALWAYS" style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 15; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.05), 10, 0, 0, 2);">
                  <Label text="Filters" style="-fx-font-weight: bold; -fx-font-size: 14px; -fx-text-fill: #2c3e50; -fx-padding: 0 0 10 0;" />
                  <HBox spacing="10.0" alignment="CENTER_LEFT">
                     <children>
                        <DatePicker fx:id="startDatePicker" promptText="Start Date" prefWidth="130.0" />
                        <Label text="to" style="-fx-text-fill: #7f8c8d;" />
                        <DatePicker fx:id="endDatePicker" promptText="End Date" prefWidth="130.0" />
                        <ComboBox fx:id="filterCategoryComboBox" promptText="All Categories" prefWidth="160.0" style="-fx-background-radius: 4; -fx-background-color: #f8f9fa; -fx-border-color: #dee2e6; -fx-border-radius: 4; -fx-prompt-text-fill: #7f8c8d;" />
                        <Button mnemonicParsing="false" onAction="#handleFilter" text="Apply Filter" style="-fx-background-color: #2b5876; -fx-text-fill: white; -fx-background-radius: 4; -fx-cursor: hand;" />
                        <Button mnemonicParsing="false" onAction="#handleClearFilter" text="Clear" style="-fx-background-color: #95a5a6; -fx-text-fill: white; -fx-background-radius: 4; -fx-cursor: hand;" />
                     </children>
                  </HBox>
               </VBox>
               
               <!-- Tools -->
               <VBox style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 15; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.05), 10, 0, 0, 2);">
                  <Label text="Tools" style="-fx-font-weight: bold; -fx-font-size: 14px; -fx-text-fill: #2c3e50; -fx-padding: 0 0 10 0;" />
                  <HBox spacing="10.0" alignment="CENTER_LEFT">
                     <children>
                        <Button mnemonicParsing="false" onAction="#handleAddCategory" text="New Category" style="-fx-background-color: #f39c12; -fx-text-fill: white; -fx-background-radius: 4; -fx-cursor: hand;" />
                        <Button mnemonicParsing="false" onAction="#handleExportCSV" text="Export CSV" style="-fx-background-color: #34495e; -fx-text-fill: white; -fx-background-radius: 4; -fx-cursor: hand;" />
                        <Button mnemonicParsing="false" onAction="#handleImportCSV" text="Import CSV" style="-fx-background-color: #34495e; -fx-text-fill: white; -fx-background-radius: 4; -fx-cursor: hand;" />
                        <Button mnemonicParsing="false" onAction="#handleDatabaseBackup" text="Backup DB" style="-fx-background-color: #34495e; -fx-text-fill: white; -fx-background-radius: 4; -fx-cursor: hand;" />
                     </children>
                  </HBox>
               </VBox>
            </HBox>

            <HBox spacing="10.0">
               <children>
                  <ProgressBar fx:id="importProgressBar" prefWidth="300.0" visible="false" />
                  <Label fx:id="importStatusLabel" text="" style="-fx-text-fill: #27ae60;" />
               </children>
            </HBox>
         </children>
      </VBox>
   </top>
   <center>
      <SplitPane dividerPositions="0.6" orientation="HORIZONTAL" style="-fx-background-color: transparent; -fx-padding: 0 15 15 15;">
         <items>
            <VBox style="-fx-background-color: white; -fx-background-radius: 10; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.05), 10, 0, 0, 2);">
               <children>
                  <Label text="Recent Transactions" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #2c3e50; -fx-padding: 15;" />
                  <TableView fx:id="transactionTable" VBox.vgrow="ALWAYS" style="-fx-background-color: transparent; -fx-border-color: transparent;">
                     <columns>
                        <TableColumn fx:id="typeColumn" prefWidth="90.0" text="Type" />
                        <TableColumn fx:id="amountColumn" prefWidth="110.0" text="Amount" />
                        <TableColumn fx:id="descriptionColumn" prefWidth="220.0" text="Description" />
                        <TableColumn fx:id="dateColumn" prefWidth="120.0" text="Date" />
                        <TableColumn fx:id="categoryColumn" prefWidth="150.0" text="Category" />
                     </columns>
                     <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                     </columnResizePolicy>
                  </TableView>
               </children>
            </VBox>
            <VBox spacing="15.0">
               <children>
                  <VBox VBox.vgrow="ALWAYS" style="-fx-background-color: white; -fx-background-radius: 10; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.05), 10, 0, 0, 2);">
                     <children>
                        <Label text="Category Breakdown" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #2c3e50; -fx-padding: 15;" />
                        <PieChart fx:id="categoryPieChart" VBox.vgrow="ALWAYS" legendSide="RIGHT" />
                     </children>
                  </VBox>
                  <VBox VBox.vgrow="ALWAYS" style="-fx-background-color: white; -fx-background-radius: 10; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.05), 10, 0, 0, 2);">
                     <children>
                        <Label text="Monthly Trend" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #2c3e50; -fx-padding: 15;" />
                        <LineChart fx:id="monthlyLineChart" VBox.vgrow="ALWAYS" createSymbols="true">
                           <xAxis>
                              <CategoryAxis side="BOTTOM" />
                           </xAxis>
                           <yAxis>
                              <NumberAxis side="LEFT" />
                           </yAxis>
                        </LineChart>
                     </children>
                  </VBox>
               </children>
            </VBox>
         </items>
      </SplitPane>
   </center>
</BorderPane>

